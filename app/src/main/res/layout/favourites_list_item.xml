<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/layout_margin_small"
    android:background="@drawable/white_rounded_background_borderless"
    android:padding="@dimen/layout_padding_small"
    app:layout_goneMarginBottom="@dimen/layout_margin_small">

    <ImageView
        android:id="@+id/delete_favorite_image_view"
        android:layout_width="@dimen/image_view_width"
        android:layout_height="@dimen/image_view_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/layout_margin"
        android:layout_marginStart="@dimen/layout_margin"
        android:clickable="true"
        android:src="@drawable/ic_delete_black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/delete_favorite_image_view"
        android:layout_toStartOf="@id/delete_favorite_image_view"
        android:gravity="start">

        <ImageView
            android:id="@+id/favorite_type_image_view"
            android:layout_width="@dimen/image_view_width"
            android:layout_height="@dimen/image_view_height"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/layout_margin"
            android:layout_marginRight="@dimen/layout_margin"
            android:src="@drawable/ic_directions_black"/>

        <TextView
            android:id="@+id/favorite_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Dodda Nekkundi To Coles Road"
            android:textColor="@color/standard_text_color"
            android:textSize="@dimen/text_size_medium"/>

    </LinearLayout>

</RelativeLayout>