<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/list_item_background_color"
    android:padding="@dimen/layout_padding">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/bus_image_view_width"
        android:layout_height="@dimen/bus_image_view_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/layout_margin"
        android:layout_marginRight="@dimen/layout_margin"
        app:srcCompat="@drawable/ic_directions_bus_special"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/imageView"
        android:layout_toRightOf="@id/imageView"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/routeServiceTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="Metro Feeder"
            android:textColor="@color/standard_text_color"
            android:textSize="@dimen/text_size_medium"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/layout_margin"
            android:layout_marginRight="@dimen/layout_margin"
            android:layout_toLeftOf="@id/routeServiceTypeTextView"
            android:layout_toStartOf="@id/routeServiceTypeTextView"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/routeNumberTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/grey_rounded_background_borderless"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="MF-1"
                android:textColor="@color/white_text_color"
                android:textSize="@dimen/text_size_big"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>