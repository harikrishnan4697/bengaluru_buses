<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.bangalorebuses.search.SearchActivity">

    <LinearLayout
        android:id="@+id/search_and_back_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/layout_padding"
        android:paddingLeft="@dimen/action_bar_padding"
        android:paddingRight="@dimen/action_bar_padding"
        android:paddingTop="@dimen/layout_padding">

        <Button
            android:layout_width="@dimen/image_view_width"
            android:layout_height="@dimen/image_view_height"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/action_bar_margin"
            android:layout_marginRight="@dimen/action_bar_margin"
            android:background="@drawable/ic_arrow_back_white"
            android:clickable="true"
            android:onClick="exit"/>

        <EditText
            android:id="@+id/search_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_rounded_background_borderless"
            android:enabled="false"
            android:hint="@string/search_activity_default_hint"
            android:inputType="text"
            android:maxLines="1"
            android:padding="@dimen/layout_padding"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/favorites_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_and_back_linear_layout"
        android:layout_marginBottom="@dimen/layout_margin"
        android:layout_marginLeft="@dimen/layout_margin"
        android:layout_marginRight="@dimen/layout_margin"
        android:background="@drawable/white_rounded_background_borderless"
        android:clickable="true"
        android:padding="@dimen/layout_padding"
        android:visibility="gone">

        <ImageView
            android:id="@+id/favorites_image_view"
            android:layout_width="@dimen/image_view_width"
            android:layout_height="@dimen/image_view_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_favorite_black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_toEndOf="@+id/favorites_image_view"
            android:layout_toRightOf="@+id/favorites_image_view"
            android:text="@string/favourites_title"
            android:textAllCaps="true"
            android:textColor="@color/standard_text_color"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/arrow_right_image_view"
            android:layout_width="@dimen/image_view_width"
            android:layout_height="@dimen/image_view_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_keyboard_arrow_right_black"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/favorites_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_and_back_linear_layout"
        android:layout_marginBottom="@dimen/layout_margin"
        android:layout_marginLeft="@dimen/layout_margin"
        android:layout_marginRight="@dimen/layout_margin"
        android:background="@drawable/white_rounded_background_borderless"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/layout_padding"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_margin"
            android:gravity="center"
            android:text="@string/favourites_title"
            android:textAllCaps="true"
            android:textColor="@color/standard_text_color"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"/>

        <ListView
            android:id="@+id/favorites_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            />

    </LinearLayout>

    <ListView
        android:id="@+id/search_results_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/favorites_linear_layout"
        android:layout_marginBottom="@dimen/layout_margin"
        android:layout_marginLeft="@dimen/layout_margin"
        android:layout_marginRight="@dimen/layout_margin"
        android:background="@drawable/white_rounded_background_borderless"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible"/>

</RelativeLayout>