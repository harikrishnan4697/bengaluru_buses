<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bangalorebuses.SearchActivity">

    <LinearLayout
        android:id="@+id/search_and_back_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:onClick="exit"
            android:src="@drawable/ic_arrow_back_white"/>

        <EditText
            android:id="@+id/search_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_rounded_background_borderless"
            android:enabled="false"
            android:hint="Search"
            android:inputType="text"
            android:maxLines="1"
            android:minHeight="40dp"
            android:paddingBottom="5dp"
            android:paddingEnd="5dp"
            android:paddingLeft="12dp"
            android:paddingRight="5dp"
            android:paddingStart="12dp"
            android:paddingTop="5dp"
            />

    </LinearLayout>

    <ListView
        android:id="@+id/search_results_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_and_back_linear_layout"
        android:visibility="visible"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible"/>

</RelativeLayout>