<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/directTripCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    android:clickable="true"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/tripDetailsRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/tripDurationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:background="@drawable/grey_rounded_background_borderless"
                android:gravity="center"
                android:text="1 hr 7 min"
                android:textColor="#000000"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tripOriginStopNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/tripDurationTextView"
                android:layout_toRightOf="@id/tripDurationTextView"
                android:text="From Dodda Nekkundi (towards - Marathahalli Bridge)"
                android:textColor="#000000"
                android:textSize="12sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tripDetailsRelativeLayout"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/busIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_directions_bus_black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/busIcon"
                android:layout_toRightOf="@id/busIcon"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Bus arriving in:"
                android:textColor="#000000"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/busArrivalTimingsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Due, 20 min, 1 hr 17 min"
                android:textColor="#000000"
                android:textSize="12sp"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/busArrivalTimingsTextView"
                android:layout_toStartOf="@id/busArrivalTimingsTextView"
                android:src="@drawable/ic_rss_feed_orange"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>