<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/list_item_background_color"
    android:padding="@dimen/layout_padding">

    <TextView
        android:id="@+id/busStopNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Dodda Nekkundi"
        android:textColor="@color/standard_text_color"
        android:textSize="@dimen/text_size_medium"/>

    <TextView
        android:id="@+id/busStopDirectionNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/busStopNameTextView"
        android:layout_marginTop="@dimen/layout_margin_reduced"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="towards - Marathahalli Bridge"
        android:textColor="@color/standard_text_color"
        android:textSize="@dimen/text_size_small"/>

</RelativeLayout>