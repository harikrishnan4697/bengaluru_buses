<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/trip_planner_container_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background_color">

    <LinearLayout
        android:id="@+id/origin_destination_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <Button
                android:id="@+id/trip_planner_origin_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@drawable/white_rounded_background_borderless"
                android:ellipsize="end"
                android:hint="Starting bus stop"
                android:maxLines="1"
                android:minHeight="40dp"
                android:paddingBottom="5dp"
                android:paddingEnd="5dp"
                android:paddingLeft="12dp"
                android:paddingRight="5dp"
                android:paddingStart="12dp"
                android:paddingTop="5dp"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/trip_planner_destination_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:background="@drawable/white_rounded_background_borderless"
                android:ellipsize="end"
                android:hint="Ending bus stop"
                android:maxLines="1"
                android:minHeight="40dp"
                android:paddingBottom="5dp"
                android:paddingEnd="5dp"
                android:paddingLeft="12dp"
                android:paddingRight="5dp"
                android:paddingStart="12dp"
                android:paddingTop="5dp"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textSize="16sp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/swapDirectionImageView"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/orange_rounded_border"
            android:clickable="true"
            android:src="@drawable/ic_swap_vert_black"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/errorLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/origin_destination_linear_layout"
        android:animateLayoutChanges="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/errorImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_location_off_black"/>

        <TextView
            android:id="@+id/errorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="Can't find bus stops nearby because GPS is off."
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/errorResolutionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/white_rounded_background_borderless"
            android:padding="16dp"
            android:text="Turn on GPS"
            android:textAllCaps="true"
            android:textColor="@color/colorSpecialServiceBus"/>

    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/origin_destination_linear_layout">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"/>

    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>