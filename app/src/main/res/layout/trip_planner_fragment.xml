<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/trip_planner_container_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background_color">

    <RelativeLayout
        android:id="@+id/origin_destination_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/layout_padding"
        android:paddingRight="@dimen/layout_padding">

        <ImageView
            android:id="@+id/swapDirectionImageView"
            android:layout_width="@dimen/action_image_view_width"
            android:layout_height="@dimen/action_image_view_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginStart="@dimen/layout_margin"
            android:background="@drawable/orange_rounded_border"
            android:clickable="true"
            android:src="@drawable/ic_swap_vert_black"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/swapDirectionImageView"
            android:layout_toStartOf="@id/swapDirectionImageView"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:paddingBottom="@dimen/layout_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/image_view_width"
                    android:layout_height="@dimen/image_view_height"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/layout_margin"
                    android:layout_marginRight="@dimen/layout_margin"
                    android:src="@drawable/ic_location_on_white"/>

                <TextView
                    android:id="@+id/trip_planner_origin_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="@drawable/white_rounded_background_borderless"
                    android:clickable="true"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:hint="@string/trip_planner_origin_label"
                    android:maxLines="1"
                    android:padding="@dimen/layout_padding"
                    android:textAllCaps="false"
                    android:textColor="@color/standard_text_color"
                    android:textSize="@dimen/text_size_medium"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_reduced"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/image_view_width"
                    android:layout_height="@dimen/image_view_height"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/layout_margin"
                    android:layout_marginRight="@dimen/layout_margin"
                    android:src="@drawable/ic_flag_white"/>

                <TextView
                    android:id="@+id/trip_planner_destination_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="@drawable/white_rounded_background_borderless"
                    android:clickable="true"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:hint="@string/trip_planner_destination_label"
                    android:maxLines="1"
                    android:padding="@dimen/layout_padding"
                    android:textAllCaps="false"
                    android:textColor="@color/standard_text_color"
                    android:textSize="@dimen/text_size_medium"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/errorLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/origin_destination_linear_layout"
        android:animateLayoutChanges="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/errorImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_location_off_black"/>

        <TextView
            android:id="@+id/errorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="Can't find bus stops nearby because GPS is off."
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/errorResolutionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/white_rounded_background_borderless"
            android:padding="16dp"
            android:text="Turn on GPS"
            android:textAllCaps="true"
            android:textColor="@color/colorSpecialServiceBus"/>

    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/origin_destination_linear_layout">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"/>

    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>