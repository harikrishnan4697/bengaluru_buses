<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_rounded_background"
    android:padding="10dp">

    <TextView
        android:id="@+id/busStopNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="Kempegowda International Airport"
        android:textColor="#000000"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/busStopDirectionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/busStopNameTextView"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="towards Bengaluru City"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/busStopDistTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/busStopDirectionTextView"
        android:layout_margin="10dp"
        android:text="0.35 Km away"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/busStopDirectionTextView"
        android:layout_toLeftOf="@+id/busStopDistTextView"
        android:layout_toStartOf="@+id/busStopDistTextView"
        app:srcCompat="@drawable/ic_directions_walk_black"/>
</RelativeLayout>