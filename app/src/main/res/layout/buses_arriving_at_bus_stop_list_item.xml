<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/list_item_background_color"
    android:padding="@dimen/layout_padding">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/image_view_width"
        android:layout_height="@dimen/image_view_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/layout_margin"
        android:layout_marginRight="@dimen/layout_margin"
        app:srcCompat="@drawable/ic_flight_blue"/>

    <LinearLayout
        android:id="@+id/busETAsLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="end"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/realTimeImageView"
            android:layout_width="@dimen/real_time_image_view_width"
            android:layout_height="@dimen/real_time_image_view_height"
            android:layout_marginEnd="@dimen/layout_margin_reduced"
            android:layout_marginLeft="@dimen/layout_margin_reduced"
            android:layout_marginRight="@dimen/layout_margin_reduced"
            android:layout_marginStart="@dimen/layout_margin_reduced"
            app:srcCompat="@drawable/ic_rss_feed_orange"/>

        <TextView
            android:id="@+id/busETATextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="29 min, 47 min, 1 hr 7 min"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_medium"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageView"
        android:layout_toLeftOf="@id/busETAsLinearLayout"
        android:layout_toRightOf="@id/imageView"
        android:layout_toStartOf="@id/busETAsLinearLayout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/routeNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/grey_rounded_background_borderless"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="KIAS-8"
            android:textColor="@color/standard_text_color"
            android:textSize="@dimen/text_size_medium"/>

    </LinearLayout>

    <TextView
        android:id="@+id/routeDestinationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="@dimen/layout_margin"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="To Kempegowda International Airport"
        android:textColor="@color/standard_text_color"
        android:textSize="@dimen/text_size_small"/>

</RelativeLayout>