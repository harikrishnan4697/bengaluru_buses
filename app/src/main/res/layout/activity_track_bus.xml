<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.bangalorebuses.tracker.TrackBusActivity">

    <RelativeLayout
        android:id="@+id/action_bar_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="@dimen/action_bar_padding">

        <ImageView
            android:id="@+id/back_button_image_view"
            android:layout_width="@dimen/image_view_width"
            android:layout_height="@dimen/image_view_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/action_bar_margin"
            android:layout_marginRight="@dimen/action_bar_margin"
            android:clickable="true"
            android:src="@drawable/ic_arrow_back_white"/>

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/back_button_image_view"
            android:layout_toRightOf="@id/back_button_image_view"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/buses_title"
            android:textColor="@color/white_text_color"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/favorite_image_view"
            android:layout_width="@dimen/image_view_width"
            android:layout_height="@dimen/image_view_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginStart="@dimen/layout_margin"
            android:clickable="true"
            android:src="@drawable/ic_favorite_border_white"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/directionSelectionLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/action_bar_relative_layout"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:paddingLeft="@dimen/layout_padding"
        android:paddingRight="@dimen/layout_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_margin_small"
            android:gravity="start"
            android:text="@string/direction_label_text"
            android:textColor="@color/white_text_color"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/changeDirectionImageView"
                android:layout_width="@dimen/action_image_view_width"
                android:layout_height="@dimen/action_image_view_height"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/layout_margin"
                android:layout_marginStart="@dimen/layout_margin"
                android:background="@drawable/orange_rounded_border"
                android:clickable="true"
                android:onClick="swapDirection"
                android:src="@drawable/ic_swap_horiz_black"/>

            <TextView
                android:id="@+id/directionNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/changeDirectionImageView"
                android:layout_toStartOf="@id/changeDirectionImageView"
                android:background="@drawable/white_rounded_background_borderless"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="2"
                android:onClick="swapDirection"
                android:padding="@dimen/layout_padding"
                android:textColor="@color/standard_text_color"
                android:textSize="@dimen/text_size_medium"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bus_stop_selection_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/directionSelectionLinearLayout"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:padding="@dimen/layout_padding"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/layout_margin_small"
            android:text="@string/bus_stop_label_text"
            android:textColor="@color/white_text_color"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/white_rounded_background_borderless">

            <Spinner
                android:id="@+id/route_stop_list_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:clickable="true"
                android:spinnerMode="dropdown"
                android:textAlignment="viewStart"/>

        </RelativeLayout>

    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/bus_stop_selection_linear_layout"
        android:layout_margin="@dimen/layout_margin"
        android:background="@drawable/white_rounded_background_borderless">

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:scrollbars="none"/>

    </android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/errorLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bus_stop_selection_linear_layout"
        android:layout_margin="@dimen/layout_margin"
        android:animateLayoutChanges="true"
        android:background="@drawable/white_rounded_background_borderless"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/errorImageView"
            android:layout_width="@dimen/error_image_view_width"
            android:layout_height="@dimen/error_image_view_height"
            android:layout_margin="@dimen/layout_margin"
            android:src="@drawable/ic_sad_face"/>

        <TextView
            android:id="@+id/errorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginRight="@dimen/layout_margin"
            android:text="An error occurred!"
            android:textAlignment="center"
            android:textColor="@color/standard_text_color"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/errorResolutionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin"
            android:padding="@dimen/layout_padding"
            android:text="@string/fix_error_retry"
            android:textAllCaps="true"
            android:textColor="@color/colorSpecialServiceBus"/>

    </LinearLayout>

</RelativeLayout>