<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nearbyBusStopCardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/layout_margin_right"
    android:layout_marginLeft="@dimen/layout_margin_left"
    android:layout_marginRight="@dimen/layout_margin_right"
    android:layout_marginStart="@dimen/layout_margin_left"
    android:layout_marginTop="@dimen/layout_margin_top"
    android:background="@color/item_background"
    android:clickable="true"
    app:cardCornerRadius="@dimen/card_view_corner_radius">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_padding">

        <TextView
            android:id="@+id/busStopNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/layout_margin_bottom_reduced"
            android:text="Kempegowda International Airport"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_big"/>

        <TextView
            android:id="@+id/busStopDirectionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/busStopNameTextView"
            android:layout_marginBottom="@dimen/layout_margin_bottom"
            android:text="towards Bengaluru City"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_medium"/>

        <TextView
            android:id="@+id/busStopDistanceTextView"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/busStopDirectionTextView"
            android:layout_marginLeft="@dimen/layout_margin_left"
            android:layout_marginStart="@dimen/layout_margin_left"
            android:gravity="center"
            android:text="0.35 Km away"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_medium"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/image_view_width"
            android:layout_height="@dimen/image_view_height"
            android:layout_below="@+id/busStopDirectionTextView"
            android:layout_toLeftOf="@+id/busStopDistanceTextView"
            android:layout_toStartOf="@+id/busStopDistanceTextView"
            app:srcCompat="@drawable/ic_directions_walk_black"/>

        <ImageView
            android:id="@+id/metroFeederImageView"
            android:layout_width="@dimen/image_view_width"
            android:layout_height="@dimen/image_view_height"
            android:layout_below="@+id/busStopDirectionTextView"
            android:layout_toEndOf="@+id/airportShuttleImageView"
            android:layout_toRightOf="@+id/airportShuttleImageView"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_directions_bus_special"/>

        <ImageView
            android:id="@+id/airportShuttleImageView"
            android:layout_width="@dimen/image_view_width"
            android:layout_height="@dimen/image_view_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/busStopDirectionTextView"
            android:layout_marginEnd="@dimen/layout_margin_right"
            android:layout_marginRight="@dimen/layout_margin_right"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_flight_blue"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>