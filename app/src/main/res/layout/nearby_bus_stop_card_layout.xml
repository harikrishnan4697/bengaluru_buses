<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nearbyBusStopCardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    android:clickable="true"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/busStopNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:text="Kempegowda International Airport"
            android:textColor="#000000"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/busStopDirectionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/busStopNameTextView"
            android:layout_marginBottom="16dp"
            android:text="towards Bengaluru City"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/busStopDistanceTextView"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/busStopDirectionTextView"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="0.35 Km away"
            android:textAlignment="center"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/busStopDirectionTextView"
            android:layout_toLeftOf="@+id/busStopDistanceTextView"
            android:layout_toStartOf="@+id/busStopDistanceTextView"
            app:srcCompat="@drawable/ic_directions_walk_black"/>

        <ImageView
            android:id="@+id/metroFeederImageView"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/busStopDirectionTextView"
            android:layout_toEndOf="@+id/airportShuttleImageView"
            android:layout_toRightOf="@+id/airportShuttleImageView"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_directions_bus_special"/>

        <ImageView
            android:id="@+id/airportShuttleImageView"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/busStopDirectionTextView"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_flight_blue"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>